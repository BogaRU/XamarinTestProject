<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinAppTst.OfferPage">
    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always" HorizontalScrollBarVisibility="Always">
        <StackLayout>
            <Label Text="JSON Serialized Offer:" FontSize="Large" Margin="10" />
            <Editor Text="{Binding OfferJson}" IsReadOnly="True" Margin="10" />
        </StackLayout>
    </ScrollView>
</ContentPage>